/* pages/createTeam/createTeam.wxss */

.form-info {
  background-color: white;
  width: 85%;
  padding: 0rpx 20rpx;
  margin: 80rpx auto;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  border-radius: 20rpx;
}

.form-title {
  text-align: center;
  font-size: 60rpx;
  color: #4a69bd;
}

.form-item{
  width: 100%;
  display: flex;
  font-size: 36rpx;
  flex-direction: row;
  margin-top: 30rpx;
}

.item-title{
  margin: 10rpx 0;
  width: 30%;
}

input{
  height: 60rpx;
  display: block;
  border-bottom: 2rpx dashed #7286bdab;
}

picker{
  height: 60rpx;
  border-bottom: 5rpx solid #4a69bd;
}

textarea{
  border: 5rpx solid #4a69bd;
  padding: 10rpx;
  width: 95%;
  margin: 10rpx auto;
  margin-bottom: 20rpx;
}
