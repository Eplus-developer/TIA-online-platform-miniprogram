/* pages/editMyInfo/editMyInfo.wxss */

.top-show {
  background-size: 100% 100%;
  padding: 20rpx 60rpx;
  display: flex;
  flex-direction: column;
}

/* .avatar-item {
  text-align: center;
} */

.top-avatar {
  margin-top: 20rpx;
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
  border: 5rpx solid white;
  display: flex;
  overflow: hidden;
}

.top-name {
  color: black;
  margin-bottom: 260rpx;
}

.top-edit{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.top-edit-text{
  text-align: center;
  color: white;
  font-size: 50rpx;
}

.top-edit-img{
  align-self: center;
  height: 60rpx;
  width: 60rpx;
}


.tia-btn {
  width: 50%;
  margin: 50rpx auto;
  padding: 15rpx;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  background-color: white;
  transition: 0.3s;
  border-radius: 20rpx;
  color: #4a69bd;
  font-size: 50rpx;
  font-weight: bold;
  text-align: center;
}

.form-info {
  background-color: white;
  width: 85%;
  padding: 40rpx 30rpx;
  margin: 80rpx auto;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  border-radius: 20rpx;
}

.item-title{
  font-size: 36rpx;
  margin: 20rpx 0;
  width: 30%;
}

.form-item{
  width: 100%;
  display: flex;
  flex-direction: row;
  border-bottom: 2rpx dashed #7286bdab;
}

.form-item:last-child{
  width: 100%;
  display: flex;
  flex-direction: column;
  border-bottom: none;
}

input{
  font-size: 36rpx;
  display: block;
  margin: 20rpx 0;
}

picker{
  /* height: 60rpx; */
  font-size: 36rpx;
  border-bottom: 0rpx solid #fff;
  display: block;
  margin: 20rpx 0;
}

textarea{
  border: 2rpx dashed #7286bdab;
  padding: 10rpx;
  width: 95%;
  margin: 10rpx auto;
  margin-bottom: 20rpx;
  font-size: 36rpx;
}

.msgbox_in_img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  overflow: hidden;
  text-align: center;
  align-self: left;
  margin-bottom: 10rpx;
}