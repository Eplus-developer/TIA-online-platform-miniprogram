.form-info {
  background-color: white;
  width: 85%;
  padding: 40rpx 30rpx;
  margin: 80rpx auto;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  border-radius: 20rpx;
}

.form-title {
  text-align: center;
  font-size: 60rpx;
  color: #4a69bd;
}

.form-item {
  width: 100%;
  display: flex;
  flex-direction: row;
  border-bottom: 2rpx dashed #7286bdab;
}

.form-item:last-child {
  width: 100%;
  display: flex;
  flex-direction: column;
  border-bottom: none;
}

.item-title {
  font-size: 36rpx;
  margin: 20rpx 0;
  width: 30%;
}

input {
  font-size: 36rpx;
  display: block;
  margin: 20rpx 0;
}

picker {
  /* height: 60rpx */
  font-size: 36rpx;
  border-bottom: 0rpx solid #fff;
  display: block;
  margin: 20rpx 0;
}

textarea {
  border: 2rpx dashed #7286bdab;
  padding: 10rpx;
  width: 95%;
  margin: 10rpx auto;
  margin-bottom: 20rpx;
  font-size: 36rpx;
}

.form-btn {
  width: 50%;
  margin: 50rpx auto;
  padding: 15rpx;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  background-color: white;
  transition: 0.3s;
  border-radius: 20rpx;
  color: #4a69bd;
  font-size: 50rpx;
  font-weight: bold;
  text-align: center;
}

